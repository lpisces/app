.navbar.navbar-fixed-top
  .navbar-inner
    .container
      %a.btn.btn-navbar{:'data-target' => '.nav-collapse', :'data-toggle' => 'collapse'}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.brand{:href => root_path}= content_for?(:site_name) ? yield(:site_name) : 'App'
      .container.nav-collapse
        %ul.nav
          %li
            %a{:href => '#'}= "<small>分类导航</small>".html_safe
        %ul.nav.pull-right
          - if signed_in?
            %li
              %a{:href => '#'}= "<i class='icon-user'></i>#{current_user.name}".html_safe
            %li
              %a{:href => signout_path}= "<i class='icon-hand-right'></i><small>退出</small>".html_safe
          - else 
            %li
              %a{:href => signin_path}= "<i class='icon-chevron-right'></i><small>登录</small>".html_safe 
            %li
              %a{:href => signup_path}= "<i class='icon-plus-sign'></i><small>注册</small>".html_safe
