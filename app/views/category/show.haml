.span12
  %ul.breadcrumb{:style => 'margin:-20px 0 0 0px;'}
    %li
      %a{:href => '/'} 首页
      %span.divider /
    %li
      %a{:href => category_map_path} 分类导航
      %span.divider /
    - if @category.level == 1
      %li.active= @category.name
    - else 
      - parent = Category.find_by_id @category.parent_id
      %li
        %a{:href => "/category/#{parent.id}"}= parent.name
        %span.divider /
      %li.active= @category.name

.span11{:style => 'margin:0px;'}
  - if @category.level == 1
    - sub = Category.where(:parent_id => @category.id).all
  - else
    - sub = Category.where(:parent_id => @category.parent_id).all
  %table
    %tr
      %td
        - sub.each do |s|
          - if s.id == @category.id
            %a.pull-left.label.label-success{:style => 'margin:5px;', :href => "/category/#{s.id}"}= s.name
          - else 
            %a.pull-left.label{:style => 'margin:5px;', :href => "/category/#{s.id}"}= s.name

.span12{:style => 'margin:20px 0 0 0 ;'}
  %ul.thumbnails{:style => 'margin:0px;'}
    - @products.each do |p|
      %li{:style => 'width:195px;height:320px;margin:0 10px;padding:5px;display:block;'}
        %a{:target => '_blank', :style => 'border:none;width:195px;', :href => "/go/product/#{p.id}"}
          %img.img-rounded.lazy{:'src' => '', :'data-original' => "#{p.pic_url}_220x220.jpg", :alt => "#{p.title}", :style => 'width:195px;height:195px;'}
        %small.pull-right{:style => 'margin:5px 0 0 25px;width:195px;'}
          %a{:href => "/go/product/#{p.id}", :target => '_blank'}= p.title
        %h6.pull-left{:style => 'color:red;padding-right:3px;'}= "￥#{p.coupon_price}"
        %h6.pull-left{:style => 'color:#333;text-decoration:line-through;'}= "￥#{p.price} "
        %h4.pull-right
          %a{:href => "/go/shop/#{p.id}", :target => '_blank'}
            %i.icon-home
        %h4.pull-right
          %a{:href => 'javascript:void(0)', :style => 'color:orangered;'}
            %i.icon-star-empty
        %h4.pull-right
          %a{:href => "/go/product/#{p.id}", :style => 'color:#46a546'}
            %i.icon-shopping-cart
.pull-right= will_paginate @products, :renderer => BootstrapPagination::Rails
      

